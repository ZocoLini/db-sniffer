<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="POJOS.Vehiculo" table="VEHICULO" schema="dbo" catalog="EMPRESAHB2">
        <id name="nss" type="string">
            <column name="NSS" length="15" />
            <generator class="foreign">
                <param name="property">empregado</param>
            </generator>
        </id>

        <property name="matricula" type="string">
            <column name="Matricula" length="10" />
        </property>
        <property name="marca" type="string">
            <column name="Marca" length="15" />
        </property>
        <property name="modelo" type="string">
            <column name="Modelo" length="25" />
        </property>
        <property name="dataCompra" type="date">
            <column name="DataCompra" length="10" />
        </property>

        <one-to-one name="empregado" class="POJOS.Empregado"
                    constrained="true">
        </one-to-one>
    </class>
</hibernate-mapping>
